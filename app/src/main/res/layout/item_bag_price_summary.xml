<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="2dp"
    android:layout_height="wrap_content">

 <LinearLayout
     android:id="@+id/deliveryadress"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/white" android:visibility="visible"
    android:layout_marginTop="2dp"
    android:layout_height="180dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize"
            android:textStyle="bold"
            android:layout_margin="@dimen/fab_margin"
            android:text="Delivery Address"
            />

        <TextView
            android:id="@+id/delivertfulladres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:text="Please select address"
            />


        <TextView
            android:id="@+id/deliverymobileno"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:text=""
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/changeAdress"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edit_text"
            android:text="Change"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/grey"
        />


<LinearLayout
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="196dp">


    <LinearLayout
        android:layout_width="match_parent"

        android:gravity="left|center_vertical"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Summary"
            android:textSize="@dimen/textsize"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/fab_margin"
                android:text="Subtotal"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/subtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:text="Subtotal"
                android:textColor="@color/black"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/fab_margin"
                android:text="Shipping"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/totalshipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:text="Shipping"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:background="@color/grey"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/fab_margin"
            android:text="Total"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/totalprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:text="Total"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/grey" />

</LinearLayout>
</LinearLayout>