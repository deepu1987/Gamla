<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="2dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"


    android:background="@color/white"

    android:layout_height="160dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize"
            android:textStyle="bold"
            android:layout_margin="@dimen/fab_margin"
            android:text="sdfsdfsdfsdfsdfsd"
            />

        <TextView
            android:id="@+id/fulladress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:text="dfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdf"
            />
      <!--  <TextView
            android:id="@+id/mobilenumberadress"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:text="9891852578"
            />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/selectadress"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edit_text"
            android:text="Select"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>